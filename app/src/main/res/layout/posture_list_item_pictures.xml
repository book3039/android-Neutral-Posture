<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="220dp"
    android:layout_height="590dp"
    android:layout_gravity="center">
    <ImageView
        android:id="@+id/image_posture_pictures"
        android:layout_width="wrap_content"
        android:layout_height="550dp"
        android:adjustViewBounds="true"
        android:src="@drawable/image_ideal_posture"
        android:layout_gravity="center"

        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_posture_picture_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="posture name"
        android:textSize="20sp"
        android:fontFamily="@font/font_one_pretty_night"
        android:layout_gravity="center|bottom"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_posture_pictures"/>
    <TextView
        android:id="@+id/text_next_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="&gt;"
        android:textSize="80sp"
        android:fontFamily="@font/font_one_pretty_night"
        android:layout_marginEnd="25dp"


        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_prev_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="&lt;"
        android:textSize="80sp"
        android:fontFamily="@font/font_one_pretty_night"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="15dp"


        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
